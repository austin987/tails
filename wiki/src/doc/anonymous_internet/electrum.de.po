msgstr ""

#. type: Bullet: '1. '
msgid "Delete the <span class=\"filename\">wallets</span> folder."
msgstr ""

#. type: Bullet: '1. '
msgid "Start <span class=\"application\">Electrum</span>."
msgstr ""

