#| "  <tr><td></td><td>USA</td><td>United Kingdom</td></tr>\n"
#| "  <tr><td>Date & time</td><td>3/17/2017 3:56 PM</td><td>17/03/2017 15:56</td></tr>\n"
#| "  <tr><td>First day of the week</td><td>Sunday</td><td>Monday</td></tr>\n"
