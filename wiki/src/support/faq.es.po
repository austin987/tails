#, no-wrap
msgid "<a id=\"java\"></a>\n"
msgstr "<a id=\"java\"></a>\n"

#. type: Title -
#, no-wrap
msgid "Is Java installed in the <span class=\"application\">Tor Browser</span>?\n"
msgstr ""

#. type: Plain text
msgid ""
