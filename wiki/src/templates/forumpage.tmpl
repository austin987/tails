<TMPL_IF FIRST>

<table class="forum-posts">

<thead>
  <tr>
    <td class="forum-post-title">Thread</td>
    <td class="forum-post-numcomments">Replies</td>
    <td class="forum-post-updated">Updated</td>
    <td class="forum-post-published">Started</td>
  </tr>
</thead>

</TMPL_IF>

